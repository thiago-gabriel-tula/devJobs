<div class="contenido-superior vacante contenedor">
    <div class="caja">
        <p class="etiqueta">Empresa</p>
        <p class="nombre">{{vacante.empresa}}</p>
    </div>

    <div class="caja">
        <p class="etiqueta">Ubicación</p>
        <p class="nombre">{{vacante.ubicacion}}</p>
    </div>

    <div class="caja">
        <p class="etiqueta">Contrato</p>
        <p class="nombre contrato">{{vacante.contrato}}</p>
    </div>

    <div class="caja">
        <p class="etiqueta">Salario</p>
        <p class="nombre contrato">$ {{vacante.salario}}</p>
    </div>
</div>

<div class="vacante-contenedor contenedor">
    <main class="contenido">
        <h2 class="contenido__titulo">Descripción del Puesto</h2>

        <div class="vacante-descripcion">
            {{{vacante.descripcion}}}
        </div>

        <a href="/vacantes/editar/{{vacante.url}}" class="btn btn-azul editar-btn editar-vacante-btn">Editar Vacante</a>
    </main>

    <aside class="sidebar">
        <h2>Conocimientos Deseados</h2>

        <ul class="skills">
            {{#each vacante.skills}}
                <li>{{this}}</li>
            {{/each}}
        </ul>
    </aside>
</div>

<div class="contenedor datos-reclutador">
    <div class="enviar-datos">
        <h2>Contactar Reclutador</h2>
        <p>Llena el siguiente formulario, sube tu curriculum y pronto te contactaremos</p>

        <form method="POST" enctype="multipart/form-data" action="/vacante/{{vacante.url}}" class="default-form">
            <div class="campo">
                <label>Nombre</label>
                <input type="text" name="nombre" placeholder="Tu Nombre" required>
            </div>

            <div class="campo">
                <label>Email</label>
                <input type="email" name="email" placeholder="Tu Email" required>
            </div>

            <div class="campo">
                <label>CV (PDF)</label>
                <input type="file" name="cv" required>
            </div>

            <div class="campo">
                <input type="submit" value="Enviar" class="btn btn-verde">
            </div>
        </form>
    </div>

    <div class="info-reclutador">
        <h2>Información del Reclutador</h2>
        {{#if vacante.autor.nombre}}
            <p>{{vacante.autor.nombre}}</p>
        {{/if}}

        {{#if vacante.autor.imagen}}
            <img src="/uploads/perfiles/{{vacante.autor.imagen}}" alt="Imagen del Reclutador">
        {{/if}}
    </div>
</div>